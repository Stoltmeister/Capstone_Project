@model IEnumerable<CapstoneProject.Models.Article>

@{
    ViewData["Title"] = "News";
}

<h2>Vegan News</h2>
<p>Powered By <a href="newsapi.org">newsapi.org</a></p>
@{
    for (int i = 0; i < Model.Count(); i += 4)
    {
        <div class="row">
                @{
                    for (int j = 0; j <= 3; j++)
                    {

                        @if (i + j == Model.Count()) { break; }
                        <div class="col-sm-4">
                            @Html.Partial("NewsPartial", Model.ElementAt(i + j))
                        </div>
                    }
                }
            </div>
    }
}
