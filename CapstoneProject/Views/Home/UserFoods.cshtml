@model IEnumerable<CapstoneProject.Models.Food>

@{
    ViewData["Title"] = "UserFoods";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <h2>Your Foods  🥪</h2>
    <p>
        <a asp-action="CheckIngredients" class="btn btn-primary">Check Another Food</a>
        <a asp-action="AllFoods" class="btn btn-primary">All Checked Foods</a>
    </p>
    @{
        for (int i = 0; i < Model.Count(); i += 3)
        {
            <div class="row">
                @{
                    for (int j = 0; j <= 2; j++)
                    {
                        @if (i + j == Model.Count()) { break; }
                        <div class="col-sm-4">

                            @Html.Partial("FoodPartial", Model.ElementAt(i + j))
                        </div>
                    }
                }
            </div>
        }
    }
</div>

