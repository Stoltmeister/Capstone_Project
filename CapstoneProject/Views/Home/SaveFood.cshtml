@model CapstoneProject.Models.Food

@{
    ViewData["Title"] = "SaveFood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Save Your Food</h2>

<p>Give your food a name and add any notes about it. Optionally upload an additional picture to easily identify the food.</p>
<hr />
