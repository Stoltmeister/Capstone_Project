@model IEnumerable<CapstoneProject.Models.Restaurant2>

@{
    ViewData["Title"] = "View";
}

<h2>Restaurants with vegetarian/vegan options near @ViewBag.CityName</h2>

<p>
    (Powered by Zomato)
</p>
<div class="row">
    @await Component.InvokeAsync("MultiPinMap", new { restaurants = Model })
</div>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cuisines)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.url)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cuisines)
                    </td>
                    <td>
                        <a class="btn btn-primary" href=@item.url>More Info</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

