@model CapstoneProject.Models.City

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Restaurant Search</h2>
<hr />

<p>Please enter the name of the nearest major city to your location below.</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CitySearchKeyword" class="control-label"></label>
                <input asp-for="CitySearchKeyword" class="form-control" />
                <span asp-validation-for="CitySearchKeyword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
