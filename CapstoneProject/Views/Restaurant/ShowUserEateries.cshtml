@model IEnumerable<CapstoneProject.Models.UserEatery>

@{
    ViewData["Title"] = "ShowUserEateries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowUserEateries</h2>

<p>
    @if (User.IsInRole("Standard"))
    {
        <a asp-action="AddEatery">Add an eatery</a>
    }
</p>
<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsVegan)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsVegetarian)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HasVeganOptions)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsVegan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsVegetarian)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HasVeganOptions)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>